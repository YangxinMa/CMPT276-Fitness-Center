<div>
<% if flash[:alert] %>
<p id = "notice"><%= flash[:alert] %> </p>
<% end %>
<%= form_tag do%>
<fieldset>
	<legend>Please Log In </legend>
	<div>
	<%= label_tag :name, "Name" %>
	<%= text_filed_tag :name, params[:name] %>
	<%= label_tag :password, "Password" %>
	<%= password_filed_tag :password, params[:password] %>
	</div>
	<div>
	<%= submit_tag "Login" %>
    </div>
</fieldset>
<% end %>
</div>
